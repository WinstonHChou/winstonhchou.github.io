<div class="projects selected-projects">
  {% assign selected_projects = site.projects | where: "selected", true | sort: "importance" %}

  {% if selected_projects == empty %}
    <p>No selected projects yet.</p>
  {% else %}
    {% if page.projects_horizontal_enabled %}
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2">
      {% for project in selected_projects %}
        {% unless project.hide_project %}
          {% include projects_horizontal.liquid %}
        {% endunless %}
      {% endfor %}
      </div>
    </div>
    {% else %}
    <div class="row row-cols-1 row-cols-md-3">
      {% for project in selected_projects %}
        {% unless project.hide_project %}
          {% include projects.liquid %}
        {% endunless %}
      {% endfor %}
    </div>
    {% endif %}
  {% endif %}
</div>
